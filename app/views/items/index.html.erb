<p id="notice"><%= notice %></p>

<h1 class="text-center"><%= link_to 'ITEMS', root_path %></h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr class="text-center">
      <th>Name</th>
      <th>Manufacturer</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Description</th>
      <th colspan="3">Item Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr class="text-center">
        <td><%= item.name %></td>
        <td><%= item.manufacturer %></td>
        <td><%= item.price %></td>
        <td><%= item.quantity %></td>
        <td><%= item.description %></td>
        <td><%= link_to 'Show', item, class: 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_item_path(item), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="text-center">
<%= link_to 'New Item', new_item_path, class: 'btn btn-primary' %>
</div>